@using VidHub.ViewModels
@model VidHub.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customers.Count > 2 ? "alert alert-dismissible alert-warning" : null;
}



<h2 class="@className">@Model.Movie.Title</h2>

@if (Model.Customers.Count == 0)
{
    <p>There are no customers.</p>
}
else
{
    <p>There are @Model.Customers.Count customers.</p>
}

<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>

    }
</ul>


